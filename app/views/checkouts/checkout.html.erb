<div class="px-8 lg:px-16 py-8">
  <div class="flex flex-wrap">
    <div class="w-full lg:w-2/3">
      <div class="font-medium text-xl">
        <div class="flex flex-col">
          <div class="mx-0 lg:mx-4">
            <div class="mx-auto">
              <%= form_with(url: checkouts_path) do |form| %>
                <div class="flex flex-col">
                  <%= form.text_field :phone, placeholder: "2547123456", value: current_user.phone, class: "my-2 border-slate-100" %>
                  <%= form.select :payment_method, @payment_methods, prompt: "Select a payment method", class: "my-2 border-slate-100" %>
                  <%= form.submit "Checkout", class: "my-4 bg-[#F35300] border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-orange-500 mb-2"%>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="w-full lg:w-1/3">
      <section aria-labelledby="summary-heading" class="bg-gray-50 rounded-lg px-4 py-6 sm:p-6 lg:p-8">
        <h2 id="summary-heading" class="text-lg font-medium text-gray-900">Order summary</h2>

        <dl class="mt-6 space-y-4 mb-8">
          <div class="flex items-center justify-between">
            <dt class="text-sm text-gray-600">Selected Items</dt>
            <dd class="text-sm font-medium text-gray-900">
              KES <%= @cart.amount %>
            </dd>
          </div>
        </dl>

        <div class="mt-12">
          <div class="flex justify-between">
            <h3 class="text-xl">Total:</h3>
            <h3 class="text-xl"><%= number_to_currency(@cart.amount, unit: "KES") %></h3>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
